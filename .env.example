# GitHub App Configuration
# These are required for the app to function

# Your GitHub App's ID (from App settings page)
GITHUB_APP_ID=

# Your GitHub App's private key (contents of the .pem file, base64 encoded)
# Encode with: base64 -i private-key.pem
GITHUB_APP_PRIVATE_KEY=

# Your GitHub App's webhook secret
GITHUB_WEBHOOK_SECRET=

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/impact-board

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_README_UPDATES=true
ENABLE_SVG_GENERATION=true
ENABLE_ANTI_GAMING=true

# Scoring Configuration
MAX_DAILY_COMMITS_SCORED=50
MIN_LINES_FOR_COMMIT=5
COMMIT_WEIGHT=1
PR_WEIGHT=5
ISSUE_WEIGHT=3
